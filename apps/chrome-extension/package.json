{
  "name": "@qarbon/chrome-extension",
  "version": "1.1.0",
  "private": true,
  "description": "QarbonQuery Chrome Extension for real-time carbon footprint tracking",
  "main": "src/background.ts",
  "scripts": {
    "dev": "tsc -b --watch",
    "build": "tsc -b",
    "build:extension": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "build:watch": "webpack --mode=development --watch",
    "clean": "rm -rf dist extension",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:token": "jest --testNamePattern='token|extractor|adapter|normalization'",
    "package": "npm run build:extension",
    "create-icons": "node scripts/create-simple-icons.js",
    "build:complete": "node scripts/build-extension.js",
    "test:extension": "node scripts/test-extension.js",
    "audit": "node scripts/audit-summary.js"
  },
  "dependencies": {
    "@qarbon/tracker-adapters": "file:../../packages/@qarbon/tracker-adapters",
    "qarbon-emissions": "^1.1.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/jest": "^29.5.5",
    "copy-webpack-plugin": "^10.2.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-webextension-mock": "^3.8.9",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.0.0",
    "webpack": "^5.99.9",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4"
  },
  "manifest": {
    "manifest_version": 3,
    "name": "QarbonQuery Carbon Tracker",
    "version": "1.1.0",
    "description": "Track your digital carbon footprint in real-time",
    "permissions": [
      "activeTab",
      "storage",
      "background"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": [
          "content.js"
        ]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "QarbonQuery"
    }
  }
}
